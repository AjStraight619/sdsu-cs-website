generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  bio           String?
  courses       Course[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Course {
  id          String   @id @default(cuid())
  professorId String
  professor   User     @relation(fields: [professorId], references: [id])
  title       String
  description String?
  content     String?
  // files       File[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

